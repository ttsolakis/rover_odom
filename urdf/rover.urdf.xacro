<?xml version="1.0"?>
<robot name="rover" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Base link (simple box) -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.15"/>
      </geometry>
      <material name="grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
  </link>

  <!-- IMU link: mounted with 180° yaw relative to base_link -->
  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="imu_mount" type="fixed">
    <!-- 180° about Z -->
    <origin xyz="0 0 0.05" rpy="0 0 3.14159"/>
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>

  <!-- LiDAR link: 15cm above base -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.06"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 1.0 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_mount" type="fixed">
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_link"/>
  </joint>

</robot>
